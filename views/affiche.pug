extends layout
block content
    .popular_places_area
        .container
            .row
                each val in voyages
                    .col-lg-4.col-md-6
                        .single_place
                            .thumb
                                img(src='/'+val.productImage, alt='')
                                a.prise(href='#') #{val.prix}DT
                            .place_info
                                a(href='/api/voyage/'+val.id)
                                    h3 #{val.depart} vers #{val.arrive}
                                .rating_days.d-flex.justify-content-between
                                    span.d-flex.justify-content-center.align-items-center
                                        i.fa.fa-star
                                        i.fa.fa-star
                                        i.fa.fa-star
                                        i.fa.fa-star
                                        i.fa.fa-star
                                        a(href='#') (20 Review)
                                    .days
                                        i.fa.fa-clock-o
                                        a(href='#') 5 Days
            
                                                
